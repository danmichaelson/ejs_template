<html>
    
    <head>
        <style type='text/css'>
            @-webkit-keyframes revolution {
                from {
                    -webkit-transform: rotate(0deg);
                }
                to {
                    -webkit-transform: rotate(360deg);
                }
            }
            .one, .two, .three {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                -webkit-animation-name: revolution;
                -webkit-animation-timing-function: linear;
                -webkit-animation-iteration-count: infinite;
                -webkit-transform-origin: 50% 50%;
                opacity: .75;
            }
            .one {
                background: red;
                -webkit-animation-duration: <%= duration1 %>s;
            }
            .two {
                background: yellow;
                -webkit-animation-duration: <%= duration2 %>s;
            }
            .three {
                background: blue;
                -webkit-animation-duration: <%= duration3 %>s;
            }
        </style>
    </head>
    
    <body>
        <div class='one'></div>
        <div class='two'></div>
        <div class='three'></div>
    </body>

</html>